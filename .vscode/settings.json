{
  "workbench.activityBar.location": "right",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    ".DS_Store": true
  },
  "search.exclude": {
    "node_modules": true,
    "dist": true
  },
  "codex.model": "gpt-5-codex",
  "codex.reasoningEffort": "high",
  "codex.approvalMode": "agent",
  "codex.contextFiles": [
    "mythos.config.json",
    "README.md",
    "web/decoder/decoder.html",
    "web/engine/**",
    "docs/Manuscript/**"
  ]
}
